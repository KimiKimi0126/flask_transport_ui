{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "formatter": {
            "format": "%(asctime)s %(module)s %(levelname)s: %(message)s"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "formatter",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "transport": {
            "level": "DEBUG",
            "handlers": ["console"],
            "propagate": false
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}
